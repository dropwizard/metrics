<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:metrics="http://www.yammer.com/schema/metrics"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
			http://www.yammer.com/schema/metrics http://www.yammer.com/schema/metrics/metrics.xsd">

	<context:annotation-config />

	<metrics:annotation-driven proxy-target-class="true" />

	<bean class="com.yammer.metrics.spring.ProxyTargetClass" />
	<bean class="com.yammer.metrics.spring.AutowiredCollaborator" />
	
</beans>